<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MesCompetences" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- App -->
    <style name="MainTitle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BasicTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="PopupTitle" parent="BasicTitle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="RegularTitle" parent="MainTitle">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>